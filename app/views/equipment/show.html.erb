<h1> <%=@equip.name%> </h1>
<div class="clearfix">
<div id="column1" class="col3rd">
  <ul>
    <% @general.each do |field, value| %>
      <li> <b><%= field.capitalize%>: </b> <%= value%></li>
    <%end%>
    
   <%= render "shared/synth_info"%>
    
  </ul>
</div>
<div id="col2" class="col3rd">
  <ul>
    <% @specs.each do |field, value| %>
      <li> <b><%= field.capitalize%>: </b> <%= value%></li>
    <%end%>
    
    <li><b>Invents into:</b>
      <ul>
        <%if @invents.empty?%>
          <li> (nothing) </li>
        <%else%>
          <%@invents.each do |name| %>
            <li> <%=link_to show_equipment_path(name) do name end%> </li> 
          <%end%>
        <%end%>
      </ul>
    </li>
    <li><b>Invented from:</b>
      <ul>
        <%if @invents_from.empty?%>
          <li> (nothing) </li>
        <%else%>
          <%@invents_from.each do |name| %>
            <li> <%=link_to show_equipment_path(name) do name end%> </li> 
          <%end%>
        <%end%>
      </ul>
    </li>
  </ul>
</div>
<div id="col3" class="col3rd">
  <%= render "stats"%>
</div>
</div>
</ul>